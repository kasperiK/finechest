{
	"env": {
		"browser": true
	},
	"extends": "airbnb-base",
	"plugins": [
		"import",
		"react"
	],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true,
			"modules": true
		}
	},
	"rules": {
		"arrow-parens": 0,
		"class-methods-use-this": 0,
		"comma-dangle": 0,
		"func-names": ["error", "never"],
		"indent": ["error", "tab", {
			"SwitchCase": 1
		}],
		"max-len": 0,
		"no-plusplus": 0,
		"no-mixed-operators": 0,
		"no-tabs": 0,
		"space-before-function-paren": 0,
		"no-useless-constructor": 0,
		"jsx-quotes": [1, "prefer-double"],
		"react/jsx-uses-react": "error",
		"react/jsx-uses-vars": [2]
	}
}